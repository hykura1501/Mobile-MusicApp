            android:width="32dp"
            android:height="32dp"
            android:viewportWidth="24"
            android:viewportHeight="24">

            <path
                android:strokeWidth="2"
                android:strokeColor="@color/white"
                android:fillColor="@color/transparent"
                android:pathData="M4,4L20,20" />

            <path
                android:strokeWidth="2"
                android:strokeColor="@color/white"
                android:fillColor="@color/transparent"
                android:pathData="M4,20L20,4" />
